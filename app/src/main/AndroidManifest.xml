<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.codelabs.forum">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="app.codelabs.fevci.Forum"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="app.codelabs.fevci.activities.home.fragment.profile.activity.FollowViewActivity"></activity>
        <activity android:name="app.codelabs.fevci.activities.questioner.QuestionResultActivity" />
        <activity android:name="app.codelabs.fevci.activities.questioner.QuestionActivity"></activity>

        <provider
            android:name="app.codelabs.fevci.helpers.GenericFileProvider"
            android:authorities="${applicationId}.app.codelabs.forum.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name="app.codelabs.fevci.activities.profile.EditProfileActivity" />
        <activity android:name="app.codelabs.fevci.activities.article.DetailArticleActivity" />
        <activity android:name="app.codelabs.fevci.activities.about.AboutActivity" />
        <activity android:name="app.codelabs.fevci.activities.gallery.GalleryActivity" />
        <activity android:name="app.codelabs.fevci.activities.gallery.DetailGalleryActivity" />
        <activity android:name="app.codelabs.fevci.activities.article.ArticleActivity" />
        <activity android:name="app.codelabs.fevci.activities.event.EventActivity" />
        <activity android:name="app.codelabs.fevci.activities.shop.ProductActivity" />
        <activity android:name="app.codelabs.fevci.activities.shop.DetailProductActivity" />
        <activity android:name="app.codelabs.fevci.activities.notification.NotificationDetailActivity" />
        <activity android:name="app.codelabs.fevci.activities.vote.VoteActivity" />
        <activity android:name="app.codelabs.fevci.activities.forgot_password.ForgotPasswordActivity" />
        <activity android:name="app.codelabs.fevci.activities.forgot_password.SubmitPasswordActivity" />
        <activity android:name="app.codelabs.fevci.activities.forgot_password.FinishPasswordActivity" />
        <activity android:name="app.codelabs.fevci.activities.register.RegisterActivity" />
        <activity android:name="app.codelabs.fevci.activities.home.HomeActivity" />
        <activity android:name="app.codelabs.fevci.activities.notification.NotificationActivity" />
        <activity android:name="app.codelabs.fevci.activities.setting.SettingActivity" />
        <activity android:name="app.codelabs.fevci.activities.event.DetailEventActivity" />
        <activity android:name="app.codelabs.fevci.activities.conversation.ChatRoomActivity" />
        <activity android:name="app.codelabs.fevci.activities.login.LoginActivity" />
        <activity android:name="app.codelabs.fevci.activities.walktrough.WalkThroughActivity" />
        <activity android:name="app.codelabs.fevci.activities.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>