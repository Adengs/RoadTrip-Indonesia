<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewnotification"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_walk_through"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/shape_home_notivication"
                    android:layout_width="32dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="28dp"
                    android:layout_height="32dp">
                    <ImageView
                        android:id="@+id/img_notiv"
                        android:layout_margin="9dp"
                        android:src="@drawable/ic_notif_white"
                        android:layout_width="14dp"
                        android:layout_height="14dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtvoting"
                        android:text="Voting periode 2020 -2025"
                        android:textSize="14dp"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtdescvoting"
                        android:text="In publishing and graphic design"
                        android:textSize="12dp"
                        android:textColor="@color/colorDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtmin"
                    android:text="10 min"
                    android:textSize="12dp"
                    android:textColor="@color/colorDesc"
                    android:layout_marginTop="25dp"
                    android:gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/txtlines"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24.5dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle"></View>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

