<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.about_home.AboutHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundToolbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/Register">

        <TextView
            android:id="@+id/tvBackAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="About"
            android:drawableLeft="@drawable/ic_back_black"
            android:drawablePadding="20dp"
            android:textColor="@color/titleToolbar"
            android:textSize="14dp" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAbout"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:src="@drawable/backgroud_club"
                        android:layout_height="256dp"
                        app:layout_collapseMode="parallax" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/logo"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            android:background="@drawable/shape_bulat"
                            tools:src="@drawable/logologinbaru" />

                        <TextView
                            android:id="@+id/tvcompany_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            tools:text="Ford Everest Club Indonesia"
                            android:textColor="@color/putih"
                            android:textSize="16dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/displayScreen"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/putih"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="143dp">

                    <TextView
                        android:id="@+id/txthistoryabout"
                        android:text="History"
                        android:textColor="@color/hitam"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img_linesabout"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvHistory"
                        android:layout_marginTop="12.5dp"
                        tools:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a do. Read more"
                        android:layout_width="match_parent"
                        android:textColor="@color/texttablayout"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="@color/putih"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="126dp">

                    <TextView
                        android:id="@+id/jdlsekreAbout"
                        android:text="Secretariat"
                        android:textColor="@color/hitam"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img_lineabout"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSecretariat"
                            android:layout_marginTop="10dp"
                            tools:text="Pabuaran, Karawaci Sub-District, Tangerang City, Banten 15114"
                            android:layout_width="223dp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvmapsAbout"
                                android:layout_gravity="center"
                                android:text="Maps"
                                android:textColor="@color/putih"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shape_button_login"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="@color/putih"
                    android:layout_width="match_parent"
                    android:layout_height="97dp">

                    <TextView
                        android:id="@+id/tvOrganisasiStructural"
                        android:text="Organizational Structure"
                        android:textColor="@color/hitam"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/linesabout3"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>