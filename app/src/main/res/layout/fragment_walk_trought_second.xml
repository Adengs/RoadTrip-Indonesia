<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.walktrough.fragment.WalkTroughtSecondFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/img_onboard_2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pagergray"
                android:layout_marginLeft="166dp"
                android:background="@drawable/ic_circle_gray"
                android:layout_width="7dp"
                android:layout_height="7dp" />

            <ImageView
                android:id="@+id/pager"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_circle_red"
                android:layout_width="7dp"
                android:layout_height="7dp" />

            <ImageView
                android:id="@+id/pagergrayes"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ic_circle_gray"
                android:layout_width="7dp"
                android:layout_height="7dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="51dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Two"
            android:layout_gravity="center"
            android:textColor="@color/colorText"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="239dp"
            android:layout_height="42dp"
            android:text="The world is the planet Earth and all life on it, including human."
            android:textAlignment="center"
            android:textColor="@color/colorDesc"
            android:textSize="14dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_next"
                android:text="Next"
                android:textSize="16dp"
                android:textColor="@color/colorNext"
                android:layout_marginBottom="53dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>