<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activities.walktrough.fragment.WalkTroughtSecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pagergray"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/ic_circle_gray" />

            <ImageView
                android:id="@+id/pagergrayes"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/ic_circle_red" />

            <ImageView
                android:id="@+id/pager"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"

                android:background="@drawable/ic_circle_gray" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            tools:text="Text Two"
            android:textColor="@color/colorText"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:lines="4"
            tools:text="The world is the planet Earth and all life on it, including human."
            android:textAlignment="center"
            android:textColor="@color/colorDesc"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/colorNext"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>