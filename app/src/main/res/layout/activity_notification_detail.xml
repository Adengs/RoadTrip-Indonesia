<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.codelabs.roadtrip.activities.notification.NotificationDetailActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/shape_walk_through"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_panahleft"
            android:src="@drawable/ic_iconfinder_arrow_right_2561331"
            android:layout_width="18dp"
            android:layout_marginTop="21.26dp"
            android:layout_marginLeft="21dp"
            android:layout_marginBottom="20.26dp"
            android:layout_height="13.47dp"/>
        <TextView
            android:id="@+id/txtvotingperiod"
            android:text="Voting periode 2020 -2025"
            android:textSize="14dp"
            android:textColor="@color/colorText"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/vlines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCircle"></View>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/carname"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:text="Bayerische Motoren Werke AG, translated in English as Bavarian Motor Works."
            android:layout_width="320dp"
            android:layout_height="82dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timevot"
                android:text="09:45"
                android:textSize="12dp"
                android:textColor="@color/colorDesc"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/circlevot"
                android:src="@drawable/ic_circle_latest"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/datevot"
                android:text="20 Feb 2020"
                android:textSize="12dp"
                android:textColor="@color/colorDesc"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/linevot"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="19.5dp"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="@color/colorCircle"></View>
        <TextView
            android:id="@+id/descvot1"
            android:layout_margin="20dp"
            android:textSize="14dp"
            android:textColor="@color/colorDesc"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used before final copy is available, but it may also be used to temporarily ."
            android:layout_width="320dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/descvot2"
            android:layout_marginHorizontal="20dp"
            android:textSize="14dp"
            android:textColor="@color/colorDesc"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used before final copy is available, but it may also be used to temporarily ."
            android:layout_width="320dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_vot"
                android:text="Let's vote"
                android:background="@drawable/shape_home_latest"
                android:textColor="@color/colorRed"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>