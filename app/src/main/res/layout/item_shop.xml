<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/putih"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_marginTop="2dp"
        android:id="@+id/cardShopPro"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="119dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivimage"
                android:background="@drawable/ic_backgroundshop"
                android:src="@drawable/carwing"
                android:layout_width="119dp"
                android:layout_height="119dp">

            </ImageView>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvproductName"
                    android:text="Bayerische Motoren Werke AG, translated in English."
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>


                    <TextView
                        android:id="@+id/tvlocation"
                        android:drawableLeft="@drawable/ic_iclokasi"
                        android:textSize="12dp"
                        android:drawablePadding="10dp"
                        android:text="Ubud, Bali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>




                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_marginTop="5dp"
                    android:text="Rp 5.000.000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_marginTop="5dp"
                    android:textColor="#F62C4C"
                    android:padding="5dp"
                    android:background="@drawable/draw_shop_pro"
                    android:text="Accessories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>