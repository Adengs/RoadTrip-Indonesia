<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.shop.ActivityShop">

    <LinearLayout
        android:id="@+id/tolbarshop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:background="@color/putih"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
               android:id="@+id/btnbackShop"
                android:layout_gravity="center"
                android:src="@drawable/ic_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_iconfinder_bookmark"
                    android:textColor="@color/putih"
                    android:layout_marginRight="1dp"
                    android:layout_width="13.6dp"
                    android:layout_height="17.48dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_above="@id/bottomshop"
        android:layout_below="@id/tolbarshop"
        android:id="@+id/fragment_containershop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="?actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/viewpageractivityshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomshop"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="center"
                        android:drawableLeft="@drawable/ic_call"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="16dp"
                        android:text="Hubungi"
                        android:textStyle="bold"
                        android:textColor="@color/hitam"
                        android:textSize="14dp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_whatsapp"
                    android:background="#32B94C"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:text="WhatsApp"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="14dp" />
                </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>







</RelativeLayout>