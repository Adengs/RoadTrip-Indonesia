<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/displayScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/putih"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"
            android:layout_height="163dp" />

        <TextView
            android:id="@+id/tv_title"
            android:text="Bayerische Motoren Werke AG, translated in English as Bavarian Motor Works."
            android:layout_marginTop="20dp"
            android:lines="2"
            android:textColor="@color/hitam"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_start_event"
                android:text="20 Feb 2020"
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:drawableLeft="@drawable/ic_iconfinder_sidebar"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" - "
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_end_event"
                android:text="20 Feb 2020"
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>