<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linearevent"
    android:background="@color/colorCircle"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewevent"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="290dp">
        <LinearLayout
            android:background="@color/putih"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="290dp">
            <ImageView
                android:id="@+id/imgListEvent"
                android:padding="20dp"
                android:src="@drawable/mobil_event"
                android:layout_width="match_parent"
                android:layout_height="163dp"/>

            <TextView
               android:id="@+id/txttitleEvent"
                android:text="Bayerische Motoren Werke AG, translated in English as Bavarian Motor Works."
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_tgl_Myevent_mulai"
                    android:text="20 Feb 2020"
                    android:textSize="12dp"
                    android:textColor="@color/abu"
                    android:drawableLeft="@drawable/ic_iconfinder_sidebar"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=" - "
                    android:textSize="12dp"
                    android:textColor="@color/abu"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_tgl_Myevent_akhir"
                    android:text="20 Feb 2020"
                    android:textSize="12dp"
                    android:textColor="@color/abu"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>