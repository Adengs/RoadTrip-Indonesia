<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_forgot_silver"
    android:orientation="vertical"
    tools:context=".activities.forgotpassword.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_forgot_putih"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackForgot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21.26dp"
            android:layout_marginBottom="20.26dp"
            android:src="@drawable/ic_asset">

        </ImageView>

        <TextView
            android:layout_width="115dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="185dp"
            android:text="Forgot password"
            android:textColor="@color/hitam"
            android:textColorHighlight="@color/biru"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_forgot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>