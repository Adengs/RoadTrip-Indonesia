<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_forgot_silver"
    android:orientation="vertical"
    tools:context=".activities.forgotpassword.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_forgot_putih"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackForgot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21.26dp"
            android:layout_marginBottom="20.26dp"
            android:src="@drawable/ic_asset">

        </ImageView>

        <TextView
            android:layout_width="115dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="185dp"
            android:text="Forgot password"
            android:textColor="@color/hitam"
            android:textColorHighlight="@color/biru"
            android:textSize="14dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="321dp"
                android:layout_height="271dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/draw_forgot_putihshape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="26dp"
                    android:paddingRight="21dp"
                    android:text="Enter email address to associated with your account."
                    android:textColor="@color/hitam"
                    android:textSize="14dp">

                </TextView>


                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/draw_forgot_putihdua"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/biru"
                        android:hint="E-mail"
                        android:textColorHint="@color/abu"
                        android:textSize="14dp">

                    </EditText>

                </LinearLayout>


                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/draw_forgot_pink"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/putih"
                    android:textSize="16dp">

                </Button>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>