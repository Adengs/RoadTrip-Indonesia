<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_banner"
            android:id="@+id/img_mobil"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:src="@drawable/logo_roadtrip"
                android:layout_marginLeft="3dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/namehome"
                android:textSize="12dp"
                android:layout_marginLeft="8dp"
                android:text="Ford Everest Club Indonesia"
                android:textColor="@color/colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pager"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_circle_red" />

            <ImageView
                android:id="@+id/pagergray"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_circle_gray" />

            <ImageView
                android:id="@+id/pagergrayes"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_circle_gray" />
            <ImageView
                android:id="@+id/circlenew"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_circle_gray" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>