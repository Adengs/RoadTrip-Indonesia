<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/logo_roadtrip"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="Ford Everest Club Indonesia"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />

            <ImageView
                android:padding="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_circle_gray_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Time"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:text="2 day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="18sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="Bayerische Motoren Werke AG,translated in English as Bavarian Motor Works."
                    android:lines="3"
                    android:gravity="left"
                    android:id="@+id/tv_Content"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="180dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tv_Category"
                    android:text="Cars"
                    android:textSize="12dp"
                    android:paddingRight="7dp"
                    android:paddingLeft="7dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/colorRed"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/shape_car_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_Article"
                    android:layout_width="116dp"
                    android:layout_height="88dp"
                    android:background="@drawable/shape_img_post" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>