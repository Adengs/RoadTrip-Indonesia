<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_car"
            app:shapeAppearance="@style/roundedImageViewRounded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesehan Bu Sri"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_gravity="top"
                android:gravity="top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iclokasi"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gianyar"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/abu"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bali"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <TextView
                android:id="@+id/country_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indonesian Food"
                android:textSize="@dimen/_7sdp"
                android:textColor="@color/colorRed"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/background_red"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_7sdp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/lay_start_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start From : "
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/abu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/price_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.000"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorSpaceListLocation" />

</LinearLayout>