<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:background="@drawable/shape_vote_putihgreat"
    android:orientation="vertical"
    tools:context=".activities.vote.FragmentBottomSheetVote">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_img_vote_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  <TextView
      android:text="Great!"
      android:textSize="18dp"
      android:textStyle="bold"
      android:layout_marginTop="32dp"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <TextView
        android:text="Thank you for your vote."
        android:textSize="14dp"
        android:textColor="@color/abuai"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:gravity="bottom"
    android:layout_marginBottom="40dp"
    android:layout_marginTop="48dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_done_Vote"
        android:background="@drawable/shape_buttonlogin"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>


</LinearLayout>