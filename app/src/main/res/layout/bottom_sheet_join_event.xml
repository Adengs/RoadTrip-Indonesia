<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="253dp"
    android:orientation="vertical"
    android:background="@drawable/shape_join"
    tools:context=".activities.club.event.bottom_sheet.BottomSheetJoinEvent">

   <LinearLayout
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_height="83dp">
       <TextView
           android:text="Do you want join this event?"
          android:layout_gravity="bottom"
           android:textSize="14dp"
           android:textColor="@color/colorGray"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <Button
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_cancel"
            android:layout_marginRight="20dp"
            android:layout_width="130dp"
            android:layout_height="45dp"/>
        <Button
            android:text="Join"
            android:id="@+id/btn_join"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button_walkthrough"
            android:layout_width="130dp"
            android:layout_height="45dp"/>
    </LinearLayout>


</LinearLayout>