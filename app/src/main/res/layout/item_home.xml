<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/cardviewtabhome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_logo1_latest"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/logologinbaru"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:text="Ford Everest Club Indonesia"
                    android:textColor="@color/hitam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_circle_gray_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvUpdateActicel"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:text="2 day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="18dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Bayerische Motoren Werke AG,translated in English as Bavarian Motor Works."
                        android:lines="3"
                        android:gravity="left"
                        android:id="@+id/tvContent"
                        android:textSize="14dp"
                        android:textColor="@color/hitam"
                        android:layout_width="180dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tvcars"
                        android:text="Cars"
                        android:textSize="12dp"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="2dp"
                        android:textColor="@color/textcar"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:background="@drawable/shape_car_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivCararticel"
                        android:layout_width="116dp"
                        android:layout_height="88dp"
                        android:src="@drawable/fordeverest"
                        android:scaleType="fitCenter"
                        android:background="@drawable/shape_img_post" />
                </LinearLayout>


            </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>