<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:id="@+id/appbar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/notiflinear"
                android:background="@drawable/shape_home_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:id="@+id/txtfevci"
                    android:text="FEVCI Indonesia"
                    android:textSize="14dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/colorText"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iconbell"
                    android:src="@drawable/ic_nottification"
                    android:paddingTop="18dp"
                    android:paddingLeft="189.78dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.github.islamkhsh.CardSliderViewPager
                android:id="@+id/viewpager"
                app:auto_slide_time="3"
                app:cardSlider_indicator="@id/indicator"
                app:cardSlider_otherPagesWidth="24dp"
                app:cardSlider_pageMargin="12dp"
                app:cardSlider_smallAlphaFactor="0.5"
                app:cardSlider_smallScaleFactor="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.github.islamkhsh.CardSliderIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:indicatorsToShow="5" />
            <TextView
                android:id="@+id/txtexplorer"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:text="Explore all"
                android:layout_marginTop="20dp"
                android:background="@color/colorBackground"
                android:textColor="@color/colorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_gridhome"
                android:layout_width="match_parent"
                tools:itemCount="1"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/home_item_grid">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>


</com.google.android.material.appbar.AppBarLayout>