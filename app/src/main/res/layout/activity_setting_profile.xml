<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCircle"
    tools:context=".activities.profile.SettingProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroudToolbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/Register">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back_black"
            android:drawablePadding="20dp"
            android:text="Setting"
            android:textColor="@color/titleToolbar"
            android:textSize="14dp" />
    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@color/putih"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_push_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_push_notif"
                android:drawablePadding="16dp"
                android:paddingLeft="21dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Push notifications"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle"
                android:paddingLeft="21dp" />

            <TextView
                android:id="@+id/tv_rate_the_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setpro_ic_rate"
                android:drawablePadding="16dp"
                android:paddingLeft="21dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Rate the app"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setpro_ic_feedback"
                android:drawablePadding="16dp"
                android:paddingLeft="21dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Feedback"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle" />

            <TextView
                android:id="@+id/tv_set_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setpro_ic_language"
                android:drawablePadding="16dp"
                android:paddingLeft="21dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Language"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dark_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_setpro_ic_moon"
                    android:drawablePadding="16dp"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Dark mode"
                    android:textColor="@color/black" />

                <Switch
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.3"
                    android:checked="true"
                    android:switchMinWidth="56dp"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="19.5dp"
                android:background="@color/colorCircle" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/putih"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/pink" />
    </FrameLayout>


</RelativeLayout>
