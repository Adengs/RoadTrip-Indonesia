<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/displayScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/putih"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <ImageView
            android:id="@+id/img_event"
            android:src="@drawable/default_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="163dp" />

        <TextView
            android:id="@+id/tv_title"
            android:text="Bayerische Motoren Werke AG, translated in English as Bavarian Motor Works."
            android:layout_marginTop="20dp"
            android:lines="2"
            android:textColor="@color/hitam"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_start_event"
                android:text="20 Feb 2020"
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:drawableLeft="@drawable/ic_iconfinder_sidebar"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" - "
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_end_event"
                android:text="20 Feb 2020"
                android:textSize="12dp"
                android:textColor="@color/abu"
                android:layout_marginTop="20dp"
                android:drawablePadding="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:background="@drawable/shape_join_event_club"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_do_join"
                    android:gravity="center"
                    android:text="Do you want to join?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llJoin"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_join"
                    android:gravity="right"
                    android:text="Join"
                    android:textColor="@color/merah"
                    android:textSize="12dp"
                    android:background="@drawable/shape_car_club"
                    android:layout_width="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>
</LinearLayout>