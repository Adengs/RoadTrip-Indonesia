<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <com.google.android.gms.maps.MapView-->
<!--            android:id="@+id/mapView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent" />-->

        <fragment
            android:id="@+id/mapView"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/branchInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_location"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/icon_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lesehan Bu Sri"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_iclokasi"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gianyar"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/abu"
                            android:layout_marginStart="@dimen/_5sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=", "
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/abu" />

                        <TextView
                            android:id="@+id/province"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bali"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/abu" />

                    </LinearLayout>

<!--                    <TextView-->
<!--                        android:id="@+id/location"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Gianyar, Bali"-->
<!--                        android:textSize="@dimen/_10sdp"-->
<!--                        android:textColor="@color/abu"-->
<!--                        android:drawableLeft="@drawable/ic_iclokasi"-->
<!--                        android:drawablePadding="@dimen/_5sdp"-->
<!--                        android:layout_marginTop="@dimen/_5sdp"/>-->

                    <TextView
                        android:id="@+id/country_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indonesian Food"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/colorRed"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/background_red"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_7sdp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/lay_start_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start From : "
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/abu"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp "
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/price_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20.000"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>