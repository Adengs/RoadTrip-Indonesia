<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.walktrought.fragment.WalkTroughtThirdFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/img_onboard_3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="11dp"
                android:layout_gravity="center"
                android:layout_width="360dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pagergray"
                    android:layout_marginLeft="166dp"
                    android:background="@drawable/ic_circle_gray"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />

                <ImageView
                    android:id="@+id/pagergrayes"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_circle_gray"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />

                <ImageView
                    android:id="@+id/pager"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_circle_red"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />
            </LinearLayout>

            <TextView

                android:layout_gravity="center"
                android:id="@+id/titlefirst"
                android:layout_marginTop="51dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Three"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/descfirst"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="239dp"
                android:layout_height="42dp"
                android:text="The world is the planet Earth and all life on it, including human."
                android:textAlignment="center"
                android:textColor="@color/colorDesc"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnnext_third"
                android:text="Get Started"
                android:background="@drawable/shape_button_walkthrough"
                android:textColor="@color/colorBackground"
                android:layout_marginTop="54dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>