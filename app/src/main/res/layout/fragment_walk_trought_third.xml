<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.walktrought.fragment.WalkTroughtThirdFragment">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="11dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/pagergrayes"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_circle_gray"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />

                <ImageView
                    android:id="@+id/pager"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_circle_red"
                    android:layout_width="7dp"
                    android:layout_height="7dp" />
            </LinearLayout>

            <TextView

                android:layout_gravity="center"
                android:id="@+id/tv_title"
                android:layout_marginTop="51dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Three"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="239dp"
                android:layout_height="42dp"
                android:text="The world is the planet Earth and all life on it, including human."
                android:textAlignment="center"
                android:textColor="@color/colorDesc"
                android:textSize="14dp" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_get_started"
                    android:text="Get Started"
                    android:background="@drawable/shape_button_walkthrough"
                    android:textColor="@color/colorBackground"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>