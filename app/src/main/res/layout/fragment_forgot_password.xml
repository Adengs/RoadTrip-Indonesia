<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.forgotpassword.fragment.ForgotPasswordFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="340dp"
                android:layout_height="520dp"
                android:background="@drawable/shape_rounded_regis"
                android:orientation="vertical">

                <TextView
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/hitam"
                    android:layout_marginTop="26dp"
                    android:text="Enter email address to associated with your account."
                    android:layout_width="280dp"
                    android:layout_height="44dp">

                </TextView>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:passwordToggleDrawable="@drawable/icon_selector"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/et_emailforgotpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Email" />

                </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:id="@+id/btn_sendforgotpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_rounded_register"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/titleButton"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>