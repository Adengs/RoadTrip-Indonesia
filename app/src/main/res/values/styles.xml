<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- toolbar display -->
    <style name="Register" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/backgroudToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tablayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="srollstyle">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarFadeDuration">500</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">100</item>
        <item name="android:scrollbarThumbVertical">@color/putih</item>
        <item name="android:scrollbarTrackVertical">@color/abu</item>
    </style>

</resources>
